<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:AvaloniaApp"
             xmlns:hyperlink="clr-namespace:HyperText.Avalonia;assembly=HyperText.Avalonia"
             x:Class="AvaloniaApp.App">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="StatusConnectedBrush">#28A745</SolidColorBrush>
            <SolidColorBrush x:Key="StatusDisconnectedBrush">#DC3545</SolidColorBrush>
            <SolidColorBrush x:Key="StatusUnknownBrush">#6C757D</SolidColorBrush>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <hyperlink:HyperLinkStyle/>
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml" />
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />

        <Style Selector="Ellipse.status">
            <Setter Property="Fill" Value="{DynamicResource StatusUnknownBrush}"/>
        </Style>
        <Style Selector="Ellipse.status[Tag=Green]">
            <Setter Property="Fill" Value="{DynamicResource StatusConnectedBrush}"/>
        </Style>
        <Style Selector="Ellipse.status[Tag=Red]">
            <Setter Property="Fill" Value="{DynamicResource StatusDisconnectedBrush}"/>
        </Style>
        <Style Selector="Ellipse.status[Tag=Gray]">
            <Setter Property="Fill" Value="{DynamicResource StatusUnknownBrush}"/>
        </Style>

        <!-- Theme-aware DataGrid selection -->
        <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
            <Setter Property="Fill" Value="{DynamicResource ThemeSelectionBrush}" />
        </Style>
        <Style Selector="DataGridRow:selected /template/ ContentPresenter">
            <Setter Property="TextElement.Foreground" Value="{DynamicResource ThemeSelectionForegroundBrush}" />
        </Style>

        <!-- Theme-aware Button styling -->
        <Style Selector="Button">
            <Setter Property="Background" Value="{DynamicResource ThemeButtonBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource ThemeButtonForegroundBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="12,6" />
        </Style>
        <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource ThemeButtonHoverBrush}" />
            <Setter Property="TextElement.Foreground" Value="{DynamicResource ThemeButtonForegroundBrush}" />
        </Style>

        <!-- Custom TabItem styling to remove background highlight and adjust underline position -->
        <Style Selector="TabItem">
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="MinHeight" Value="32" />
            <Setter Property="FontSize" Value="16" />
        </Style>
        <Style Selector="TabItem:selected">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        <Style Selector="TabItem:selected:pointerover">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <!-- Adjust underline position to prevent text overlap -->
        <Style Selector="TabItem:selected /template/ Border#PART_SelectedPipe">
            <Setter Property="Margin" Value="0,2,0,0" />
        </Style>

        <!-- CalendarDatePicker styling -->
        <Style Selector="CalendarDatePicker /template/ Grid#PART_FlyoutButtonContentGrid">
            <Setter Property="Background" Value="{DynamicResource ComboBoxBackground}" />
        </Style>
        <Style Selector="CalendarDatePicker /template/ Button">
            <Setter Property="Background" Value="{DynamicResource ThemeButtonBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}" />
        </Style>
        <Style Selector="CalendarDatePicker /template/ Path">
            <Setter Property="Fill" Value="{DynamicResource ThemeForegroundBrush}" />
        </Style>

        <!-- Calendar popup styling - fully theme-aware -->
        <Style Selector="Calendar">
            <Setter Property="Background" Value="{DynamicResource ComboBoxDropDownBackground}" />
        </Style>
        <Style Selector="CalendarItem">
            <Setter Property="Background" Value="{DynamicResource ComboBoxDropDownBackground}" />
        </Style>
        <Style Selector="CalendarItem /template/ Button#PART_HeaderButton">
            <Setter Property="Background" Value="{DynamicResource ComboBoxDropDownBackground}" />
            <Setter Property="Foreground" Value="{DynamicResource ComboBoxForeground}" />
        </Style>
        <Style Selector="CalendarItem /template/ Button#PART_PreviousButton">
            <Setter Property="Background" Value="{DynamicResource ComboBoxDropDownBackground}" />
            <Setter Property="Foreground" Value="{DynamicResource ComboBoxForeground}" />
        </Style>
        <Style Selector="CalendarItem /template/ Button#PART_NextButton">
            <Setter Property="Background" Value="{DynamicResource ComboBoxDropDownBackground}" />
            <Setter Property="Foreground" Value="{DynamicResource ComboBoxForeground}" />
        </Style>

        <!-- Theme-aware GridSplitter styling -->
        <Style Selector="GridSplitter">
            <Setter Property="Background" Value="{DynamicResource ThemeGridSplitterBrush}" />
        </Style>
        <Style Selector="GridSplitter:pointerover">
            <Setter Property="Background" Value="{DynamicResource ThemeAccentBrush}" />
        </Style>
    </Application.Styles>
</Application>
