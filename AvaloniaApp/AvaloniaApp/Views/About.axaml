<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:KafkaLens.ViewModels;assembly=KafkaLens.ViewModels"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="400"
        x:Class="AvaloniaApp.Views.About"
        Title="About KafkaLens"
        xmlns:views="clr-namespace:AvaloniaApp.Views"
        x:DataType="views:About"
        Width="400" Height="320"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource ThemeAboutBackgroundBrush}"
        CanResize="False">
    <Border Padding="20">
        <StackPanel HorizontalAlignment="Center" Spacing="15">
            <!-- Logo/Icon -->
            <Viewbox Width="64" Height="64">
                <Image Source="/Assets/KafkaLens_logo_cyan_512.png" />
            </Viewbox>

            <!-- App Title -->
            <TextBlock FontSize="28"
                     FontWeight="SemiBold"
                     Text="KafkaLens"
                     HorizontalAlignment="Center"
                     Foreground="{DynamicResource ThemeForegroundBrush}"/>

            <!-- Version -->
            <StackPanel HorizontalAlignment="Center" Spacing="5" Margin="0,0,0,10">
                <TextBlock Text="{Binding AppVersion}"
                         HorizontalAlignment="Center"
                         Opacity="0.8"/>
                <Button Content="Check for Updates"
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Padding="10,2"
                        Click="CheckForUpdates_OnClick"/>
            </StackPanel>

            <!-- Links -->
            <StackPanel Spacing="8">
                <Button x:Name="ProductUrl"
                        HorizontalAlignment="Center"
                        Content="Product Page ↗"
                        Click="Url_OnClick"
                        CommandParameter="https://www.KafkaLens.com"
                        Cursor="Hand"
                        FontSize="14"
                        Foreground="{DynamicResource ThemeAccentBrush}"
                        Background="Transparent"
                        BorderThickness="0">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                        </Style>
                    </Button.Styles>
                </Button>

                <Button x:Name="ProjectUrl"
                        HorizontalAlignment="Center"
                        Content="GitHub Page ↗"
                        Click="Url_OnClick"
                        CommandParameter="https://github.com/fatichar/KafkaLens"
                        Cursor="Hand"
                        FontSize="14"
                        Foreground="{DynamicResource ThemeAccentBrush}"
                        Background="Transparent"
                        BorderThickness="0">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>

            <!-- Copyright -->
            <TextBlock Text="{Binding Copyright}"
                     HorizontalAlignment="Center"
                     Margin="0,10,0,0"
                     Opacity="0.7"
                     FontSize="12"/>
        </StackPanel>
    </Border>
</Window>